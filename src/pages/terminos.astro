---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { getLangFromUrl, useTranslations } from "../i18n";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout
  title={lang === "es"
    ? "Términos y Condiciones - LUMIA"
    : "Terms and Conditions - LUMIA"}
  description={lang === "es"
    ? "Términos y condiciones de uso de los servicios de LUMIA Odontología Especializada."
    : "Terms and conditions for using LUMIA Specialized Dentistry services."}
  lang={lang}
  keywords="términos condiciones, LUMIA, servicios dentales, términos uso"
>
  <Header />

  <main>
    <!-- Hero Section -->
    <section
      class="relative h-screen flex items-center justify-center overflow-hidden"
    >
      <div class="absolute inset-0">
        <img
          src="/optimized-images/img-lumia-ultra/equipo-trabajo-2-optimized.webp"
          alt="LUMIA Clinic"
          class="w-full h-full object-cover grayscale brightness-50"
          loading="lazy"
        />
        <div class="absolute inset-0 bg-black/40"></div>
      </div>

      <div
        class="relative z-10 text-center text-white max-w-4xl mx-auto px-4 sm:px-6 lg:px-8"
      >
        <h1 class="text-5xl md:text-7xl font-light mb-8 tracking-wide">
          {lang === "es" ? "Términos y Condiciones" : "Terms and Conditions"}
        </h1>
        <p
          class="text-xl md:text-2xl mb-12 opacity-90 font-light tracking-wide"
        >
          {
            lang === "es"
              ? "Términos que rigen nuestros servicios dentales y el uso de nuestro sitio web"
              : "Guidelines that govern our dental services and website usage"
          }
        </p>
      </div>
    </section>

    <!-- Terms Content Section -->
    <section class="py-16 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="prose prose-lg max-w-none">
          <p class="text-gray-600 mb-6">
            {
              lang === "es"
                ? "Bienvenido a LUMIA Odontología Especializada. Estos términos y condiciones rigen el uso de nuestros servicios dentales y el sitio web."
                : "Welcome to LUMIA Specialized Dentistry. These terms and conditions govern the use of our dental services and website."
            }
          </p>

          <h2 class="text-2xl font-semibold text-gray-900 mt-8 mb-4">
            {lang === "es" ? "Servicios Médicos" : "Medical Services"}
          </h2>
          <p class="text-gray-600 mb-4">
            {
              lang === "es"
                ? "Los servicios proporcionados por LUMIA son de naturaleza médica y requieren una evaluación profesional. Los resultados pueden variar según cada caso individual."
                : "Services provided by LUMIA are medical in nature and require professional evaluation. Results may vary according to each individual case."
            }
          </p>

          <h2 class="text-2xl font-semibold text-gray-900 mt-8 mb-4">
            {
              lang === "es"
                ? "Citas y Cancelaciones"
                : "Appointments and Cancellations"
            }
          </h2>
          <ul class="text-gray-600 mb-4 list-disc pl-6">
            <li>
              {
                lang === "es"
                  ? "Las citas deben programarse con al menos 24 horas de anticipación"
                  : "Appointments must be scheduled at least 24 hours in advance"
              }
            </li>
            <li>
              {
                lang === "es"
                  ? "Las cancelaciones requieren 24 horas de notificación previa"
                  : "Cancellations require 24 hours prior notice"
              }
            </li>
            <li>
              {
                lang === "es"
                  ? "Las citas perdidas pueden estar sujetas a cargos"
                  : "Missed appointments may be subject to charges"
              }
            </li>
          </ul>

          <h2 class="text-2xl font-semibold text-gray-900 mt-8 mb-4">
            {lang === "es" ? "Pagos y Facturación" : "Payments and Billing"}
          </h2>
          <p class="text-gray-600 mb-4">
            {
              lang === "es"
                ? "Los pagos se realizan al momento del servicio. Aceptamos efectivo, tarjetas de crédito y transferencias bancarias. Los precios están sujetos a cambios sin previo aviso."
                : "Payments are made at the time of service. We accept cash, credit cards and bank transfers. Prices are subject to change without notice."
            }
          </p>

          <h2 class="text-2xl font-semibold text-gray-900 mt-8 mb-4">
            {
              lang === "es"
                ? "Responsabilidad del Paciente"
                : "Patient Responsibility"
            }
          </h2>
          <p class="text-gray-600 mb-4">
            {
              lang === "es"
                ? "El paciente es responsable de proporcionar información médica precisa y completa, seguir las instrucciones post-tratamiento y asistir a todas las citas de seguimiento."
                : "The patient is responsible for providing accurate and complete medical information, following post-treatment instructions and attending all follow-up appointments."
            }
          </p>

          <h2 class="text-2xl font-semibold text-gray-900 mt-8 mb-4">
            {lang === "es" ? "Modificaciones" : "Modifications"}
          </h2>
          <p class="text-gray-600 mb-4">
            {
              lang === "es"
                ? "LUMIA se reserva el derecho de modificar estos términos en cualquier momento. Los cambios entrarán en vigor inmediatamente después de su publicación en nuestro sitio web."
                : "LUMIA reserves the right to modify these terms at any time. Changes will take effect immediately after publication on our website."
            }
          </p>

          <h2 class="text-2xl font-semibold text-gray-900 mt-8 mb-4">
            {lang === "es" ? "Contacto" : "Contact"}
          </h2>
          <p class="text-gray-600 mb-4">
            {
              lang === "es"
                ? "Para preguntas sobre estos términos y condiciones, contáctanos:"
                : "For questions about these terms and conditions, contact us:"
            }
          </p>
          <div class="bg-gray-50 p-4 rounded-lg">
            <p class="text-gray-700">
              <strong
                >{
                  lang === "es"
                    ? "LUMIA Odontología Especializada"
                    : "LUMIA Specialized Dentistry"
                }</strong
              ><br />
              CC Fundadores, Local 9908, Piso Exito<br />
              Manizales, Caldas, Colombia<br />
              <strong>{lang === "es" ? "Teléfono:" : "Phone:"}</strong> +57 (316)
              405-2829
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
