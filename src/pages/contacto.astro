---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { getLangFromUrl, useTranslations } from "../i18n";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const locations = [
  {
    city: "Manizales",
    address: "CC Fundadores, Local 201",
    addressDetail: "Carrera 23 #19-20, Manizales, Caldas",
    phone: "+57 (300) 000-0000",
    email: "manizales@lumiaodontologia.com",
    hours: "Lun - Vie: 8:00 AM - 6:00 PM\nSáb: 8:00 AM - 2:00 PM",
    mapEmbed: "https://maps.google.com/embed?pb=!1m18...", // Placeholder
  },
  // {
  //   city: "Pereira",
  //   address: "Oval Médica, Consultorio 305",
  //   addressDetail: "Carrera 14 #8-55, Pereira, Risaralda",
  //   phone: "+57 (300) 000-0001",
  //   email: "pereira@lumiaodontologia.com",
  //   hours: "Lun - Vie: 8:00 AM - 6:00 PM\nSáb: 8:00 AM - 2:00 PM",
  //   mapEmbed: "https://maps.google.com/embed?pb=!1m18...", // Placeholder
  // },
];

const services = [
  "Diseño de Sonrisa",
  "Implantes Dentales",
  "Ortodoncia",
  "Bichectomía",
  "Odontología Estética General",
  "Turismo Dental",
  "Consulta General",
];
---

<Layout
  title={t("contact.title")}
  description="Contacta con LUMIA Odontología Especializada. Agenda tu cita en Manizales. Atención personalizada y tecnología de vanguardia."
  lang={lang}
  keywords="contacto dentista Manizales, cita odontólogo Manizales, LUMIA contacto, dentista Caldas"
>
  <Header />

  <main class="pt-20">
    <!-- Hero Section -->
    <section
      class="py-20 bg-gradient-to-br from-primary-gold to-primary-gold-dark text-white"
    >
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6 animate-fade-in">
          {t("contact.title")}
        </h1>
        <p
          class="text-xl md:text-2xl mb-8 opacity-90 max-w-3xl mx-auto animate-slide-up"
        >
          {t("contact.subtitle")}
        </p>
        <div
          class="flex flex-col sm:flex-row gap-4 justify-center animate-scale-in"
        >
          <a
            href="https://wa.me/573000000000"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-8 py-4 bg-green-500 hover:bg-green-600 text-white font-semibold rounded-lg shadow-luxury hover:shadow-xl transition-all duration-300 transform hover:scale-105"
          >
            <svg class="mr-3 w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path
