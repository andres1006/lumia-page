  <Footer />
</Layout>

<style>
  /* Consistent layout regardless of language */
  .about-hero-title {
    min-height: 4rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .about-hero-subtitle {
    min-height: 6rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .about-story-subtitle {
    min-height: 3rem;
  }

  .about-purpose-description {
    min-height: 4rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .about-values-description {
    min-height: 3rem;
  }

  .about-team-description {
    min-height: 3rem;
  }

  .about-cta-description {
    min-height: 4rem;
  }

  /* Ensure consistent card heights */
  .team-member-card {
    min-height: 400px;
  }

  .team-member-title {
    min-height: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .team-member-info {
    min-height: 8rem;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .about-hero-subtitle {
      min-height: 8rem;
    }

    .about-purpose-description {
      min-height: 6rem;
    }

    .about-cta-description {
      min-height: 6rem;
    }
  }
</style>
