  <script>
    function toggleNavigation() {
      const navIndex = document.getElementById("navigation-index");
      const mobileToggle = document.getElementById("mobile-nav-toggle");

      if (!navIndex) return;

      if (navIndex.classList.contains("hidden")) {
        navIndex.classList.remove("hidden");
        if (mobileToggle) {
          mobileToggle.textContent = "‚úï";
          mobileToggle.classList.add("bg-red-600", "hover:bg-red-700");
          mobileToggle.classList.remove("bg-blue-600", "hover:bg-blue-700");
        }
      } else {
        navIndex.classList.add("hidden");
        if (mobileToggle) {
          mobileToggle.textContent = "üìã";
          mobileToggle.classList.add("bg-blue-600", "hover:bg-blue-700");
          mobileToggle.classList.remove("bg-red-600", "hover:bg-red-700");
        }
      }
    }

    // Smooth scroll for navigation links
    document.addEventListener("DOMContentLoaded", function () {
      const navLinks = document.querySelectorAll(
        '#navigation-index a[href^="#"]'
      );

      navLinks.forEach((link) => {
        link.addEventListener("click", (e) => {
          e.preventDefault();
          const targetId = (link as HTMLAnchorElement)
            .getAttribute("href")
            ?.substring(1);
          if (!targetId) return;

          const targetElement = document.getElementById(targetId);

          if (targetElement) {
            targetElement.scrollIntoView({
              behavior: "smooth",
              block: "start",
            });

            // Highlight section temporarily
            targetElement.style.transition = "box-shadow 0.3s ease";
            targetElement.style.boxShadow = "0 0 20px rgba(59, 130, 246, 0.5)";
            setTimeout(() => {
              targetElement.style.boxShadow = "";
            }, 2000);
          }
        });
      });

      // Show/hide index automatically on scroll
      let lastScrollY = window.scrollY;
      const navIndex = document.getElementById("navigation-index");

      window.addEventListener("scroll", () => {
        const currentScrollY = window.scrollY;

        if (navIndex) {
          if (currentScrollY > 100) {
            navIndex.style.transform = "translateY(-50%)";
          } else {
            navIndex.style.transform = "translateY(-50%)";
          }
        }

        lastScrollY = currentScrollY;
      });

      // Highlight active link based on visible section
      const sections = document.querySelectorAll(
        '[id^="section-"], #addendum, #contact, #company'
      );

      const observerOptions = {
        root: null,
        rootMargin: "-20% 0px -70% 0px",
        threshold: 0,
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            // Remove active class from all links
            navLinks.forEach((link) =>
              link.classList.remove("bg-blue-100", "text-blue-800")
            );

            // Add active class to corresponding link
            const activeLink = document.querySelector(
              `#navigation-index a[href="#${entry.target.id}"]`
            );
            if (activeLink) {
              activeLink.classList.add("bg-blue-100", "text-blue-800");
            }
          }
        });
      }, observerOptions);

      sections.forEach((section) => observer.observe(section));
    });

    // Function to show/hide on mobile
    function toggleMobileNavigation() {
      const navIndex = document.getElementById("navigation-index");
      if (navIndex) {
        navIndex.classList.toggle("hidden");
      }
    }
  </script>

