                        {step.step}
                      </div>
                      <div>
                        <h3 class="text-2xl font-bold text-gray-900">
                          {step.title}
                        </h3>
                        <span class="text-primary-gold font-medium">
                          {step.duration}
                        </span>
                      </div>
                    </div>
                    <p class="text-gray-600 leading-relaxed">
                      {step.description}
                    </p>
                  </div>
                </div>
                <div class="flex-1">
