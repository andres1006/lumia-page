        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {
            testimonials.map((testimonial, index) => (
              <div class="bg-gray-50 rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300">
                <div class="flex items-center mb-4">
                  {Array.from({ length: testimonial.rating }).map((_, i) => (
                    <svg
                      class="w-5 h-5 text-yellow-400"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  ))}
                </div>
                <p class="text-gray-700 mb-6 italic leading-relaxed">
                  "{testimonial.text}"
                </p>
                <div class="flex items-center">
                  <img
                    src={testimonial.image}
                    alt={testimonial.name}
                    class="w-12 h-12 rounded-full mr-4"
                  />
                  <div>
                    <h4 class="font-bold text-gray-900">{testimonial.name}</h4>
                    <p class="text-gray-600 text-sm">
                      {testimonial.age} years • {testimonial.location}
                    </p>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-primary-gold text-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-4xl md:text-5xl font-bold mb-6">
          Ready for Your New Smile?
        </h2>
        <p class="text-xl mb-12 opacity-90">
          Schedule your personalized consultation and discover how we can
          transform your smile
        </p>
        <div class="flex flex-col sm:flex-row gap-6 justify-center">
          <a
            href="/en/contact"
            class="inline-flex items-center px-10 py-5 bg-white text-primary-gold font-bold rounded-lg shadow-luxury hover:shadow-xl transition-all duration-300 transform hover:scale-105"
          >
            Schedule Free Consultation
          </a>
          <a
            href="https://wa.me/573000000000"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-10 py-5 border-3 border-white text-white hover:bg-white hover:text-primary-gold font-bold rounded-lg transition-all duration-300"
          >
            <svg class="mr-3 w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893A11.821 11.821 0 0020.531 3.503"
              ></path>
            </svg>
            WhatsApp Consultation
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />

  <style>
    .before-after-container:hover .before-image {
      opacity: 0;
    }

    .before-after-container:hover .after-image {
      opacity: 1;
    }

    .faq-button.active .faq-icon {
      transform: rotate(180deg);
    }

    .faq-content.show {
      display: block;
      animation: fadeInDown 0.3s ease-out;
    }

    @keyframes fadeInDown {
      from {
        opacity: 0;
        transform: translateY(-10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>

  <script>
    // FAQ Accordion functionality
    document.querySelectorAll(".faq-button").forEach((button) => {
      button.addEventListener("click", () => {
        const content = button.nextElementSibling as HTMLElement | null;

        // Close all other FAQs
        document.querySelectorAll(".faq-content").forEach((item) => {
          if (item !== content && item.classList.contains("show")) {
            item.classList.remove("show");
            item.classList.add("hidden");
            const prevButton =
              item.previousElementSibling as HTMLElement | null;
            if (prevButton) {
              prevButton.classList.remove("active");
            }
          }
        });

        // Toggle current FAQ
        if (content) {
          if (content.classList.contains("hidden")) {
            content.classList.remove("hidden");
            content.classList.add("show");
            button.classList.add("active");
          } else {
            content.classList.add("hidden");
            content.classList.remove("show");
            button.classList.remove("active");
          }
        }
      });
    });
  </script>
</Layout>
