    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
            Real Results
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Transformations that speak for themselves
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {
            serviceDetails.beforeAfter.map((comparison, index) => (
              <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
                <div class="relative group">
                  <div class="before-after-container">
                    <img
                      src={comparison.before}
                      alt="Before"
                      class="before-image w-full h-64 object-cover transition-opacity duration-700"
                    />
                    <img
                      src={comparison.after}
                      alt="After"
                      class="after-image w-full h-64 object-cover absolute inset-0 opacity-0 transition-opacity duration-700"
                    />
                    <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                      <span class="text-white font-semibold">
                        Hover to see result
                      </span>
                    </div>
                  </div>
                </div>
                <div class="p-6">
                  <h3 class="text-lg font-bold text-gray-900 mb-2">
                    {comparison.case}
                  </h3>
                  <div class="flex justify-between text-sm text-gray-500">
                    <span>Before</span>
                    <span>→</span>
                    <span>After</span>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
            Frequently Asked Questions
          </h2>
          <p class="text-xl text-gray-600">
            We answer your questions about Smile Design
          </p>
        </div>

        <div class="space-y-6">
          {
            serviceDetails.faq.map((item, index) => (
              <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                <button
                  class="faq-button w-full text-left p-6 focus:outline-none focus:ring-2 focus:ring-primary-gold"
                  data-target={`faq-${index}`}
                >
                  <div class="flex justify-between items-center">
                    <h3 class="text-lg font-bold text-gray-900">
                      {item.question}
                    </h3>
                    <svg
                      class="faq-icon w-5 h-5 text-primary-gold transition-transform duration-200"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M19 9l-7 7-7-7"
                      />
                    </svg>
                  </div>
                </button>
                <div class="faq-content hidden px-6 pb-6">
                  <p class="text-gray-600 leading-relaxed">{item.answer}</p>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Testimonials -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
            What Our Patients Say
