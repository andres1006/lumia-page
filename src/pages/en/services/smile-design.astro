        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-4xl font-bold text-gray-900 mb-6">
              What is Digital Smile Design?
            </h2>
            <p class="text-lg text-gray-600 mb-8 leading-relaxed">
              {serviceDetails.description}
            </p>

            <div class="space-y-4">
              <h3 class="text-2xl font-bold text-gray-900">Main Benefits:</h3>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                {
                  serviceDetails.benefits.map((benefit) => (
                    <div class="flex items-center space-x-3">
                      <div class="w-6 h-6 bg-primary-gold rounded-full flex items-center justify-center flex-shrink-0">
                        <svg
                          class="w-3 h-3 text-white"
                          fill="currentColor"
                          viewBox="0 0 20 20"
                        >
                          <path
                            fill-rule="evenodd"
                            d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                            clip-rule="evenodd"
                          />
                        </svg>
                      </div>
                      <span class="text-gray-700">{benefit}</span>
                    </div>
                  ))
                }
              </div>
            </div>
          </div>
          <div class="relative">
            <div
              class="aspect-video bg-gray-100 rounded-2xl overflow-hidden shadow-xl"
            >
              <img
                src="/optimized-images/img-lumia/cliente-final-5-optimized.jpg"
                alt="Digital Smile Design Technology"
                class="w-full h-full object-cover"
                loading="lazy"
              />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Process Steps -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
