        afterDetails: "Sonrisa blanca perfecta, espacios cerrados, proporciones armoniosas",
        technique: "Diseño Digital de Sonrisa con carillas de porcelana premium"
      },
      2: {
        title: "Rehabilitación Oral Completa",
        beforeImage: "https://via.placeholder.com/800x600/f3f4f6/9ca3af?text=Imagen+Antes",
        afterImage: "https://via.placeholder.com/800x600/d4af37/ffffff?text=Imagen+Después",
        description: "Caso complejo de múltiples dientes perdidos restaurados con 6 implantes de titanio premium y un puente fijo de cerámica. El paciente recuperó la función masticatoria completa y una sonrisa hermosa.",
        treatment: "6 Implantes Dentales + Puente Fijo de Cerámica",
        duration: "4 meses",
        beforeDetails: "Múltiples dientes perdidos, función masticatoria comprometida",
        afterDetails: "Restauración completa, función total, apariencia natural",
        technique: "Cirugía guiada de implantes con protocolo de carga inmediata"
      }
    };

    // Funcionalidad de filtrado
    filterBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const filter = btn.getAttribute('data-filter');
        
        // Actualizar botón activo
        filterBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        
        // Filtrar elementos
        galleryItems.forEach(item => {
          const htmlItem = item as HTMLElement;
          const category = item.getAttribute('data-category');
          if (filter === 'all' || category === filter) {
            htmlItem.style.display = 'block';
            htmlItem.style.animation = 'fadeInUp 0.6s ease-out';
          } else {
            htmlItem.style.display = 'none';
          }
        });
      });
    });

    // Establecer filtro activo por defecto
    const defaultFilter = document.querySelector('[data-filter="all"]');
    if (defaultFilter) {
      defaultFilter.classList.add('active');
    }

    // Funcionalidad del modal
    document.querySelectorAll('.view-case-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.stopPropagation();
        const caseId = btn.getAttribute('data-case-id');
        const numericCaseId = caseId ? parseInt(caseId) : null;
        const caseData = numericCaseId && portfolioData[numericCaseId as keyof typeof portfolioData] ? portfolioData[numericCaseId as keyof typeof portfolioData] : null;
        
        if (caseData && modal && modalTitle && modalContent) {
          modalTitle.textContent = caseData.title;
          modalContent.innerHTML = `
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
              <div>
                <h3 class="text-lg font-semibold mb-4 text-gray-900">${currentLang === "es" ? "Antes" : "Before"}</h3>
                <img src="${caseData.beforeImage}" alt="Antes" class="w-full rounded-lg shadow-lg">
                <p class="text-sm text-gray-600 mt-2">${caseData.beforeDetails}</p>
              </div>
              <div>
                <h3 class="text-lg font-semibold mb-4 text-primary-gold">${currentLang === "es" ? "Después" : "After"}</h3>
                <img src="${caseData.afterImage}" alt="Después" class="w-full rounded-lg shadow-lg">
                <p class="text-sm text-gray-600 mt-2">${caseData.afterDetails}</p>
              </div>
            </div>
            
            <div class="space-y-6">
              <div>
                <h3 class="text-lg font-semibold mb-2 text-gray-900">Descripción del Caso</h3>
                <p class="text-gray-600 leading-relaxed">${caseData.description}</p>
              </div>
              
              <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div class="bg-gray-50 p-4 rounded-lg">
                  <h4 class="font-semibold text-gray-900 mb-1">Tratamiento</h4>
                  <p class="text-gray-600 text-sm">${caseData.treatment}</p>
                </div>
                <div class="bg-gray-50 p-4 rounded-lg">
                  <h4 class="font-semibold text-gray-900 mb-1">Duración</h4>
                  <p class="text-gray-600 text-sm">${caseData.duration}</p>
                </div>
                <div class="bg-gray-50 p-4 rounded-lg">
                  <h4 class="font-semibold text-gray-900 mb-1">Técnica</h4>
                  <p class="text-gray-600 text-sm">${caseData.technique}</p>
                </div>
              </div>
            </div>
          `;
          
          modal.classList.add('show');
          document.body.style.overflow = 'hidden';
        }
      });
    });

    // Cerrar modal
    if (closeModal && modal) {
      closeModal.addEventListener('click', () => {
        modal.classList.remove('show');
        document.body.style.overflow = 'auto';
      });

      modal.addEventListener('click', (e) => {
        if (e.target === modal) {
          modal.classList.remove('show');
          document.body.style.overflow = 'auto';
        }
      });
    }

    // Funcionalidad de clic para alternar antes/después
    document.querySelectorAll('.before-after-container').forEach(container => {
      container.addEventListener('click', () => {
        const beforeImage = container.querySelector('.before-image') as HTMLElement;
        const afterImage = container.querySelector('.after-image') as HTMLElement;
        
        if (beforeImage && afterImage) {
          const isShowingAfter = afterImage.style.opacity === '1';
          
          if (isShowingAfter) {
            // Mostrar antes
            beforeImage.style.opacity = '1';
            afterImage.style.opacity = '0';
            beforeImage.style.transform = 'scale(1)';
            afterImage.style.transform = 'scale(1)';
          } else {
            // Mostrar después
            beforeImage.style.opacity = '0';
            afterImage.style.opacity = '1';
            beforeImage.style.transform = 'scale(1.05)';
            afterImage.style.transform = 'scale(1.05)';
          }
        }
      });
    });

    // Animar contadores
    const animateCounters = () => {
      const counters = document.querySelectorAll('.animate-counter');
      counters.forEach(counter => {
        const target = counter.getAttribute('data-target');
        if (target) {
          const numericTarget = parseInt(target.replace(/\D/g, ''));
          const suffix = target.replace(/\d/g, '');
          let current = 0;
          const increment = numericTarget / 100;
          
          const updateCounter = () => {
            if (current < numericTarget) {
              current += increment;
              counter.textContent = Math.floor(current) + suffix;
              requestAnimationFrame(updateCounter);
            } else {
              counter.textContent = target;
            }
          };
          
          updateCounter();
        }
      });
    };

    // Activar animación de contadores cuando estén en vista
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          animateCounters();
          observer.disconnect();
        }
      });
    });

    const firstCounter = document.querySelector('.animate-counter');
    if (firstCounter && firstCounter.parentElement) {
      observer.observe(firstCounter.parentElement);
    }
  </script>
