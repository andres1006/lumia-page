---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { useTranslations } from "../../i18n";

// Force English language for this page
const lang = "en";
const t = useTranslations(lang);
const pageTitle = "Success Case Gallery";

const galleryCases = [
  { 
    id: 1, 
    title_es: "Caso Ejemplo 1: Dise√±o de Sonrisa", 
    title_en: "Case Example 1: Smile Design", 
    beforeImage: "https://via.placeholder.com/600x400/cccccc/969696?text=Before+Example+1", 
    afterImage: "https://via.placeholder.com/600x400/f0f0f0/969696?text=After+Example+1" 
  },
  { 
    id: 2, 
    title_es: "Caso Ejemplo 2: Implantes Dentales", 
    title_en: "Case Example 2: Dental Implants", 
    beforeImage: "https://via.placeholder.com/600x400/cccccc/969696?text=Before+Example+2", 
    afterImage: "https://via.placeholder.com/600x400/f0f0f0/969696?text=After+Example+2" 
  },
  { 
    id: 3, 
    title_es: "Caso Ejemplo 3: Ortodoncia", 
    title_en: "Case Example 3: Orthodontics", 
    beforeImage: "https://via.placeholder.com/600x400/cccccc/969696?text=Before+Example+3", 
    afterImage: "https://via.placeholder.com/600x400/f0f0f0/969696?text=After+Example+3" 
  },
   { 
    id: 4, 
    title_es: "Caso Ejemplo 4: Blanqueamiento", 
    title_en: "Case Example 4: Whitening", 
    beforeImage: "https://via.placeholder.com/600x400/cccccc/969696?text=Before+Example+4", 
    afterImage: "https://via.placeholder.com/600x400/f0f0f0/969696?text=After+Example+4" 
  },
];
---

<Layout
  title={pageTitle + " - LUMIA Specialized Dentistry"}
  description="Explore our gallery of successful dental transformations. Before and after cases of smile design, dental implants, orthodontics and more at LUMIA Clinic."
  lang={lang}
  keywords="dental before after, smile makeover Colombia, dental transformation gallery, LUMIA cases, dental tourism results"
>
  <Header />

  <main class="pt-20">
    <section class="py-12 md:py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl md:text-5xl font-bold text-center text-gray-900 mb-12 md:mb-16">
          {pageTitle}
        </h1>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 lg:gap-12">
          {galleryCases.map(caseItem => (
            <div class="bg-white p-4 sm:p-6 rounded-xl shadow-lg hover:shadow-2xl transition-shadow duration-300">
              <h2 class="text-2xl md:text-3xl font-semibold text-gray-800 mb-4 sm:mb-6 text-center">
                {caseItem.title_en}
              </h2>
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div class="text-center">
                  <p class="text-lg text-gray-700 mb-2 font-medium">Before</p>
                  <img 
                    src={caseItem.beforeImage} 
                    alt={`Before - ${caseItem.title_en}`} 
                    class="rounded-lg w-full h-auto object-cover shadow-md" 
                    loading="lazy"
                  />
                </div>
                <div class="text-center">
                  <p class="text-lg text-gray-700 mb-2 font-medium">After</p>
                  <img 
                    src={caseItem.afterImage} 
                    alt={`After - ${caseItem.title_en}`} 
                    class="rounded-lg w-full h-auto object-cover shadow-md" 
                    loading="lazy"
                  />
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>