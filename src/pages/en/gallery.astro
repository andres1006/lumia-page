          <a
            href="https://wa.me/573000000000"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-10 py-5 border-2 border-primary-gold text-primary-gold hover:bg-primary-gold hover:text-white font-bold rounded-lg transition-all duration-300"
