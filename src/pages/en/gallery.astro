    .gallery-item {
      animation: fadeInUp 0.6s ease-out both;
      min-height: 400px;
      height: 100%;
      border: 1px solid #f3f4f6;
    }

    .gallery-item.featured {
      grid-row: span 2;
      min-height: 500px;
    }

    @media (min-width: 1024px) {
      .gallery-item {
        min-height: 450px;
      }
      .gallery-item.featured {
        min-height: 600px;
      }
    }

    .before-after-container:hover .before-image {
      opacity: 0;
      transform: scale(1.05);
    }

    .before-after-container:hover .after-image {
      opacity: 1;
      transform: scale(1.05);
    }

    .before-after-container {
      cursor: pointer;
    }

    .before-after-container:hover {
      transform: scale(1.02);
    }

    .line-clamp-2 {
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .filter-btn.active {
      background-color: #000000;
      color: white;
      border-color: #000000;
    }

    #case-modal.show {
      opacity: 1;
      visibility: visible;
    }

    #case-modal.show .bg-white {
      transform: scale(1);
    }
  </style>

