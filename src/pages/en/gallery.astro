        </div>
      </div>
    </section>

    <!-- Filter Section -->
    <section class="py-8 bg-gray-50 sticky top-16 z-10 border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-wrap justify-center gap-4">
          {categories.map((category) => (
            <button
              class="filter-btn flex items-center px-6 py-3 bg-white rounded-full border border-gray-200 hover:border-black hover:text-black transition-all duration-300 text-sm font-medium"
              data-filter={category.id}
            >
              {category.name}
            </button>
          ))}
        </div>
      </div>
    </section>

    <!-- Gallery Grid -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div id="gallery-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
          {portfolioItems.map((item, index) => (
            <div 
              class={`gallery-item bg-white overflow-hidden group hover:shadow-2xl transition-all duration-500 ${item.featured ? 'featured lg:col-span-2 lg:row-span-2' : ''}`}
