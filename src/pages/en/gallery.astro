  <script>
    // Gallery filtering functionality
    const filterBtns = document.querySelectorAll('.filter-btn');
    const galleryItems = document.querySelectorAll('.gallery-item');
    const modal = document.getElementById('case-modal');
    const modalTitle = document.getElementById('modal-title');
    const modalContent = document.getElementById('modal-content');
    const closeModal = document.getElementById('close-modal');

    // Portfolio data (would normally come from a database)
    const portfolioData = {
      1: {
        title: "Complete Smile Makeover",
        beforeImage: "https://via.placeholder.com/800x600/f3f4f6/9ca3af?text=Before+Image",
        afterImage: "https://via.placeholder.com/800x600/d4af37/ffffff?text=After+Image",
        description: "This patient came to us with severe discoloration, gaps, and misaligned teeth. Using Digital Smile Design technology, we created a personalized treatment plan that included 10 porcelain veneers. The result is a perfectly aligned, bright white smile that completely transformed the patient's confidence.",
