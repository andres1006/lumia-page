---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { getLangFromUrl, useTranslations } from "../../i18n";
import SparkleIcon from "../../components/react/SparkleIcon";
import WhatsAppButton from "../../components/react/WhatsAppButton";
import PlaceIcons from "../../components/react/PlaceIcons";
import BenefitIcons from "../../components/react/BenefitIcons";
import { ArrowRight } from "lucide-react";
import UltraOptimizedImageRef from "../../components/UltraOptimizedImageRef.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const packages = [
  {
    name:
      lang === "es"
        ? "Paquete Diseño de Sonrisa Premium"
        : "Premium Smile Design Package",
    duration: lang === "es" ? "5-7 días" : "5-7 days",
    price: "$3,200 - $4,500",
    originalPrice: "$8,000 - $12,000",
    savings: "60-70%",
    includes:
      lang === "es"
        ? [
            "Consulta inicial con especialista",
            "Exámenes digitales 3D completos",
            "Diseño digital de sonrisa",
            "6-10 carillas de porcelana premium",
            "Blanqueamiento dental profesional",
            "Seguimiento post-tratamiento",
            "2 noches de hotel (opcional)",
            "Traslados aeropuerto-clínica",
          ]
        : [
            "Initial specialist consultation",
            "Complete 3D digital exams",
            "Digital smile design",
            "6-10 premium porcelain veneers",
            "Professional teeth whitening",
            "Post-treatment follow-up",
            "2 hotel nights (optional)",
            "Airport-clinic transfers",
          ],
  },
  {
    name:
      lang === "es"
        ? "Paquete Implantes Todo Incluido"
        : "All-Inclusive Implants Package",
    duration: lang === "es" ? "7-10 días" : "7-10 days",
    price: "$2,500 - $5,000",
    originalPrice: "$6,000 - $15,000",
    savings: "60-75%",
    includes:
      lang === "es"
        ? [
            "Evaluación con tomografía 3D",
            "1-4 implantes dentales premium",
            "Cirugía guiada por computadora",
            "Coronas de porcelana",
            "Medicamentos incluidos",
            "Seguimiento durante 1 año",
            "3 noches de hotel (opcional)",
            "Plan nutricional post-cirugía",
          ]
        : [
            "3D tomography evaluation",
            "1-4 premium dental implants",
            "Computer-guided surgery",
            "Porcelain crowns",
            "Medications included",
            "1-year follow-up",
            "3 hotel nights (optional)",
            "Post-surgery nutrition plan",
          ],
  },
  {
    name:
      lang === "es"
        ? "Paquete Transformación Completa"
        : "Complete Transformation Package",
    duration: lang === "es" ? "10-14 días" : "10-14 days",
    price: "$6,000 - $9,000",
    originalPrice: "$20,000 - $30,000",
    savings: "70-80%",
    includes:
      lang === "es"
        ? [
            "Evaluación integral multiespecialista",
            "Diseño de sonrisa completo",
            "Implantes + carillas combinados",
            "Ortodoncia invisible (si aplica)",
            "Bichectomía facial",
            "Blanqueamiento avanzado",
            "5 noches de hotel incluidas",
            "Tour gastronómico y cultural",
          ]
        : [
            "Comprehensive multi-specialist evaluation",
            "Complete smile design",
            "Combined implants + veneers",
            "Invisible orthodontics (if applicable)",
            "Facial bichectomy",
            "Advanced whitening",
            "5 hotel nights included",
            "Gastronomic and cultural tour",
          ],
  },
];

const process = [
  {
    step: "1",
    title:
      lang === "es" ? "Consulta Virtual Gratuita" : "Free Virtual Consultation",
    description:
      lang === "es"
        ? "Evaluamos tu caso y diseñamos un plan de tratamiento personalizado desde casa."
        : "We evaluate your case and design a personalized treatment plan from home.",
  },
  {
    step: "2",
    title: lang === "es" ? "Planificación del Viaje" : "Trip Planning",
    description:
      lang === "es"
        ? "Te ayudamos con vuelos, alojamiento y todos los detalles de tu estadía."
        : "We help you with flights, accommodation and all the details of your stay.",
  },
  {
    step: "3",
    title: lang === "es" ? "Llegada y Bienvenida" : "Arrival and Welcome",
    description:
      lang === "es"
        ? "Te recogemos en el aeropuerto y te instalamos cómodamente en Manizales."
        : "We pick you up at the airport and get you comfortably settled in Manizales.",
  },
  {
    step: "4",
    title: lang === "es" ? "Tratamiento Dental" : "Dental Treatment",
    description:
      lang === "es"
        ? "Ejecutamos tu plan de tratamiento con la más alta calidad y tecnología."
        : "We execute your treatment plan with the highest quality and technology.",
  },
  {
    step: "5",
    title: lang === "es" ? "Recuperación y Turismo" : "Recovery and Tourism",
    description:
      lang === "es"
        ? "Disfruta de Colombia mientras te recuperas con nuestro programa turístico."
        : "Enjoy Colombia while you recover with our tourism program.",
  },
  {
    step: "6",
    title: lang === "es" ? "Seguimiento Continuo" : "Continuous Follow-up",
    description:
      lang === "es"
        ? "Mantenemos contacto contigo para asegurar resultados perfectos a largo plazo."
        : "We keep in touch with you to ensure perfect long-term results.",
  },
];

const faqs = [
  {
    question:
      lang === "es"
        ? "¿Necesito visa para viajar a Colombia?"
        : "Do I need a visa to travel to Colombia?",
    answer:
      lang === "es"
        ? "Los requisitos de visa dependen de tu país de origen. Por ejemplo, los ciudadanos estadounidenses no necesitan visa para estadías menores a 90 días, solo pasaporte vigente. Te recomendamos verificar los requisitos específicos para tu nacionalidad antes de viajar."
        : "Visa requirements depend on your country of origin. For example, US citizens do not need a visa for stays under 90 days, just a valid passport. We recommend checking the specific requirements for your nationality before traveling.",
  },
  {
    question:
      lang === "es"
        ? "¿Qué pasa si necesito cuidados adicionales?"
        : "What if I need additional care?",
    answer:
      lang === "es"
        ? "Ofrecemos seguimiento virtual 24/7 y tenemos convenios con dentistas en Estados Unidos para emergencias."
        : "We offer 24/7 virtual follow-up and have agreements with dentists in the United States for emergencies.",
  },
  {
    question:
      lang === "es"
        ? "¿Los materiales son de la misma calidad?"
        : "Are the materials of the same quality?",
    answer:
      lang === "es"
        ? "Utilizamos materiales premium de la más alta calidad, idénticos a los utilizados en las mejores clínicas de Estados Unidos y Europa. Trabajamos con marcas reconocidas internacionalmente como Straumann, Nobel Biocare y 3M."
        : "We use premium materials of the highest quality, identical to those used in the best clinics in the United States and Europe. We work with internationally recognized brands such as Straumann, Nobel Biocare and 3M.",
  },
  {
    question:
      lang === "es"
        ? "¿Hablan inglés en la clínica?"
        : "Do they speak English at the clinic?",
    answer:
      lang === "es"
        ? "Sí, contamos con la posibilidad de comunicarnos completamente en inglés. Nuestro equipo médico y administrativo es bilingüe, y garantizamos que tu experiencia sea completamente en inglés si así lo prefieres. Desde la consulta inicial hasta el seguimiento post-tratamiento."
        : "Yes, we have the ability to communicate completely in English. Our medical and administrative team is bilingual, and we guarantee that your experience will be completely in English if you prefer. From the initial consultation to post-treatment follow-up.",
  },
];
---

<Layout
  title={t("tourism.hero.title")}
  description={lang === "es"
    ? "Ahorra hasta 70% en tratamientos dentales de calidad mundial. Combina tu cuidado dental con unas vacaciones increíbles en Manizales, Colombia."
    : "Save up to 70% on world-class dental treatments. Combine your dental care with an incredible vacation in Manizales, Colombia."}
  lang={lang}
  keywords={lang === "es"
    ? "turismo dental Colombia, dentista Manizales extranjeros, implantes dentales baratos Colombia, diseño sonrisa turismo, vacaciones dentales"
    : "dental tourism Colombia, dentist Manizales foreigners, cheap dental implants Colombia, smile design tourism, dental vacation"}
>
  <Header />

  <main>
    <!-- Hero Section -->
    <section
      class="relative h-screen flex items-center justify-center overflow-hidden"
    >
      <div class="absolute inset-0">
        <UltraOptimizedImageRef
          src="/optimized-images/img-lumia-ultra/cliente-final-4-optimized.jpg"
          alt="LUMIA Dental Tourism - Resultados de Tratamiento"
          class="w-full h-full object-cover grayscale brightness-50"
          quality="high"
          loading="lazy"
        />
        <div class="absolute inset-0 bg-black/40"></div>
      </div>

      <div class="absolute inset-0 flex items-center justify-center">
        <div class="text-center text-white max-w-3xl px-4 sm:px-6 lg:px-8">
          <h1 class="text-4xl md:text-6xl font-light mb-6 tracking-wide">
            {t("tourism.hero.title")}
          </h1>
          <p
            class="text-lg md:text-xl opacity-90 font-light tracking-wide leading-relaxed"
          >
            {t("tourism.hero.subtitle")}
          </p>
        </div>
      </div>

      <!-- Stats Banner -->
      <div
        class="absolute bottom-0 left-0 right-0 bg-white/10 backdrop-blur-sm border-t border-white/20"
      >
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
          <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
            <div>
              <div class="text-3xl font-bold text-white">70%</div>
              <div class="text-sm opacity-80 text-white">
                {lang === "es" ? "Ahorro Promedio" : "Average Savings"}
              </div>
            </div>
            <div>
              <div class="text-3xl font-bold text-white">500+</div>
              <div class="text-sm opacity-80 text-white">
                {
                  lang === "es"
                    ? "Pacientes Internacionales"
                    : "International Patients"
                }
              </div>
            </div>
            <div>
              <div class="text-3xl font-bold text-white">100%</div>
              <div class="text-sm opacity-80 text-white">
                {lang === "es" ? "Satisfacción" : "Satisfaction"}
              </div>
            </div>
            <div>
              <div class="text-3xl font-bold text-white">15+</div>
              <div class="text-sm opacity-80 text-white">
                {lang === "es" ? "Años de Experiencia" : "Years Experience"}
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Value Proposition Section -->
    <section class="py-32 bg-white">
      <div class="mx-auto">
        <div class="text-center mb-24">
          <h2
            class="text-5xl md:text-6xl font-light text-gray-900 mb-8 tracking-wide"
          >
            {t("tourism.value.title")}
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto font-light">
            {t("tourism.value.subtitle")}
          </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-0">
          <!-- Savings Card -->
          <div class="group relative h-96">
            <div class="absolute inset-0">
              <UltraOptimizedImageRef
                src="/optimized-images/img-lumia-ultra/cliente-final-5-optimized.jpg"
                alt="Savings - Resultados de Tratamiento"
                class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-700"
                quality="high"
                loading="lazy"
              />
              <div
                class="absolute inset-0 bg-black/60 group-hover:bg-black/40 transition-all duration-700"
              >
              </div>
            </div>
            <div
              class="relative h-full flex flex-col justify-end py-4 px-0 text-white"
            >
              <div class="mb-6 p-4">
                <h3 class="text-2xl font-light mb-4 tracking-wide">
                  {
                    lang === "es"
                      ? "Ahorro Extraordinario"
                      : "Extraordinary Savings"
                  }
                </h3>
                <p class="text-gray-200 font-light leading-relaxed">
                  {
                    lang === "es"
                      ? "Ahorra hasta 80% en tratamientos premium sin comprometer la calidad"
                      : "Save up to 80% on premium treatments without compromising quality"
                  }
                </p>
              </div>
              <div class="border-t border-white/20 pt-4 p-4">
                <div class="text-3xl font-light">60-80%</div>
                <div class="text-sm text-gray-300 font-light">
                  {lang === "es" ? "de ahorro promedio" : "average savings"}
                </div>
              </div>
            </div>
          </div>

          <!-- Quality Card -->
          <div class="group relative h-96">
            <div class="absolute inset-0">
              <UltraOptimizedImageRef
                src="/optimized-images/img-lumia-ultra/cliente-final-6-optimized.jpg"
                alt="Quality - Resultados de Tratamiento"
                class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-700"
                quality="high"
                loading="lazy"
              />
              <div
                class="absolute inset-0 bg-black/60 group-hover:bg-black/40 transition-all duration-700"
              >
              </div>
            </div>
            <div
              class="relative h-full flex flex-col justify-end py-4 px-0 text-white"
            >
              <div class="mb-6 p-4">
                <h3 class="text-2xl font-light mb-4 tracking-wide">
                  {
                    lang === "es"
                      ? "Calidad Internacional"
                      : "International Quality"
                  }
                </h3>
                <p class="text-gray-200 font-light leading-relaxed">
                  {
                    lang === "es"
                      ? "Especialistas certificados con tecnología de vanguardia"
                      : "Certified specialists with cutting-edge technology"
                  }
                </p>
              </div>
              <div class="border-t border-white/20 pt-4 p-4">
                <div class="text-3xl font-light">15+</div>
                <div class="text-sm text-gray-300 font-light">
                  {lang === "es" ? "años de experiencia" : "years experience"}
                </div>
              </div>
            </div>
          </div>

          <!-- Experience Card -->
          <div class="group relative h-96">
            <div class="absolute inset-0">
              <UltraOptimizedImageRef
                src="/optimized-images/img-lumia-ultra/cliente-final-7-optimized.jpg"
                alt="Experience - Resultados de Tratamiento"
                class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-700"
                quality="high"
                loading="lazy"
              />
              <div
                class="absolute inset-0 bg-black/60 group-hover:bg-black/40 transition-all duration-700"
              >
              </div>
            </div>
            <div
              class="relative h-full flex flex-col justify-end py-4 px-0 text-white"
            >
              <div class="mb-6 p-4">
                <h3 class="text-2xl font-light mb-4 tracking-wide">
                  {lang === "es" ? "Experiencia Única" : "Unique Experience"}
                </h3>
                <p class="text-gray-200 font-light leading-relaxed">
                  {
                    lang === "es"
                      ? "Combina tu tratamiento con turismo cultural y gastronómico"
                      : "Combine your treatment with cultural and gastronomic tourism"
                  }
                </p>
              </div>
              <div class="border-t border-white/20 pt-4 p-4">
                <div class="text-3xl font-light">100%</div>
                <div class="text-sm text-gray-300 font-light">
                  {lang === "es" ? "satisfacción" : "satisfaction"}
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Additional Benefits -->
        <div
          class="mt-24 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12"
        >
          <div class="text-center group">
            <div
              class="w-20 h-20 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:bg-primary-gold/10 transition-all duration-300"
            >
              <BenefitIcons client:load type="plane" size="lg" />
            </div>
            <h4 class="text-lg font-light text-gray-900 mb-3 tracking-wide">
              {lang === "es" ? "Traslados Incluidos" : "Transfers Included"}
            </h4>
            <p class="text-gray-600 text-sm font-light">
              {
                lang === "es"
                  ? "Aeropuerto-clínica-hotel"
                  : "Airport-clinic-hotel"
              }
            </p>
          </div>

          <div class="text-center group">
            <div
              class="w-20 h-20 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:bg-primary-gold/10 transition-all duration-300"
            >
              <BenefitIcons client:load type="hotel" size="lg" />
            </div>
            <h4 class="text-lg font-light text-gray-900 mb-3 tracking-wide">
              {lang === "es" ? "Alojamiento Premium" : "Premium Accommodation"}
            </h4>
            <p class="text-gray-600 text-sm font-light">
              {lang === "es" ? "Hoteles de 4-5 estrellas" : "4-5 star hotels"}
            </p>
          </div>

          <div class="text-center group">
            <div
              class="w-20 h-20 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:bg-primary-gold/10 transition-all duration-300"
            >
              <BenefitIcons client:load type="target" size="lg" />
            </div>
            <h4 class="text-lg font-light text-gray-900 mb-3 tracking-wide">
              {lang === "es" ? "Seguimiento 24/7" : "24/7 Follow-up"}
            </h4>
            <p class="text-gray-600 text-sm font-light">
              {lang === "es" ? "Atención continua" : "Continuous care"}
            </p>
          </div>

          <div class="text-center group">
            <div
              class="w-20 h-20 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:bg-primary-gold/10 transition-all duration-300"
            >
              <BenefitIcons client:load type="gift" size="lg" />
            </div>
            <h4 class="text-lg font-light text-gray-900 mb-3 tracking-wide">
              {lang === "es" ? "Garantía Total" : "Total Warranty"}
            </h4>
            <p class="text-gray-600 text-sm font-light">
              {lang === "es" ? "Resultados garantizados" : "Guaranteed results"}
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Packages Section -->
    <section class="bg-white">
      <div class="mx-auto">
        <!-- Main Package Card -->
        <div class="relative h-[600px] overflow-hidden">
          <div
            class="absolute inset-0 w-screen left-1/2 transform -translate-x-1/2"
          >
            <UltraOptimizedImageRef
              src="/optimized-images/img-lumia-ultra/cliente-final-9-optimized.jpg"
              alt="Dental Tourism Packages - Resultados de Tratamiento"
              class="w-full h-full object-cover grayscale"
              quality="high"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-black/50"></div>
          </div>

          <div
            class="relative h-full flex flex-col justify-center py-4 px-0 text-white max-w-7xl mx-auto"
          >
            <div class="max-w-2xl py-12 px-4 md:py-16 md:px-0">
              <h3
                class="text-3xl md:text-4xl lg:text-5xl font-light mb-6 md:mb-8 tracking-wide"
              >
                {
                  lang === "es"
                    ? "Experiencia Dental Premium"
                    : "Premium Dental Experience"
                }
              </h3>
              <p
                class="text-lg md:text-xl text-gray-200 font-light leading-relaxed mb-6 md:mb-8"
              >
                {
                  lang === "es"
                    ? "Diseñamos paquetes personalizados que combinan tratamientos dentales premium con experiencias turísticas únicas en Colombia"
                    : "We design personalized packages that combine premium dental treatments with unique tourism experiences in Colombia"
                }
              </p>

              <div
                class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6 mb-6 md:mb-8"
              >
                <div class="flex items-start space-x-3 md:space-x-4">
                  <div
                    class="w-2 h-2 bg-primary-gold rounded-full mt-2 md:mt-3 flex-shrink-0"
                  >
                  </div>
                  <div>
                    <h4 class="text-base md:text-lg font-light mb-1 md:mb-2">
                      {
                        lang === "es"
                          ? "Traslados Incluidos"
                          : "Transfers Included"
                      }
                    </h4>
                    <p class="text-sm md:text-base text-gray-300 font-light">
                      {
                        lang === "es"
                          ? "Desde y hacia el aeropuerto"
                          : "From and to the airport"
                      }
                    </p>
                  </div>
                </div>
                <div class="flex items-start space-x-3 md:space-x-4">
                  <div
                    class="w-2 h-2 bg-primary-gold rounded-full mt-2 md:mt-3 flex-shrink-0"
                  >
                  </div>
                  <div>
                    <h4 class="text-base md:text-lg font-light mb-1 md:mb-2">
                      {
                        lang === "es"
                          ? "Alojamiento Premium"
                          : "Premium Accommodation"
                      }
                    </h4>
                    <p class="text-sm md:text-base text-gray-300 font-light">
                      {
                        lang === "es"
                          ? "Hoteles de 4 y 5 estrellas"
                          : "4 and 5 star hotels"
                      }
                    </p>
                  </div>
                </div>
                <div class="flex items-start space-x-3 md:space-x-4">
                  <div
                    class="w-2 h-2 bg-primary-gold rounded-full mt-2 md:mt-3 flex-shrink-0"
                  >
                  </div>
                  <div>
                    <h4 class="text-base md:text-lg font-light mb-1 md:mb-2">
                      {lang === "es" ? "Seguimiento 24/7" : "24/7 Follow-up"}
                    </h4>
                    <p class="text-sm md:text-base text-gray-300 font-light">
                      {
                        lang === "es"
                          ? "Acompañamiento personalizado"
                          : "Personalized accompaniment"
                      }
                    </p>
                  </div>
                </div>
                <div class="flex items-start space-x-3 md:space-x-4">
                  <div
                    class="w-2 h-2 bg-primary-gold rounded-full mt-2 md:mt-3 flex-shrink-0"
                  >
                  </div>
                  <div>
                    <h4 class="text-base md:text-lg font-light mb-1 md:mb-2">
                      {lang === "es" ? "Garantía Total" : "Total Guarantee"}
                    </h4>
                    <p class="text-sm md:text-base text-gray-300 font-light">
                      {
                        lang === "es"
                          ? "Resultados garantizados"
                          : "Guaranteed results"
                      }
                    </p>
                  </div>
                </div>
              </div>

              <a
                href="/contacto"
                class="inline-flex items-center px-6 md:px-8 py-3 md:py-4 bg-primary-gold text-white font-light tracking-wide hover:bg-yellow-600 transition-all duration-300 rounded-none text-sm md:text-base"
              >
                {lang === "es" ? "Cotizar Mi Paquete" : "Quote My Package"}
                <ArrowRight className="ml-2 w-4 h-4 md:w-5 md:h-5" />
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Destination Section -->
    <section class="pt-32 bg-white">
      <div class="mx-auto">
        <div class="text-center mb-24">
          <h2
            class="text-5xl md:text-6xl font-light text-gray-900 mb-8 tracking-wide"
          >
            {t("tourism.destination.title")}
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto font-light">
            {t("tourism.destination.subtitle")}
          </p>
        </div>

        <!-- Gallery Collage -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-0">
          <!-- Nevado del Ruiz -->
          <div class="group relative h-96 overflow-hidden">
            <div class="absolute inset-0">
              <img
                src="/lugares/nevado-ruiz.jpg"
                alt="Nevado del Ruiz - Resultados de Tratamiento"
