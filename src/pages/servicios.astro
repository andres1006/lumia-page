---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ServiceCard from "../components/react/ServiceCard";
import { getLangFromUrl, useTranslations } from "../i18n";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const mainServices = [
  {
    title: "Diseño de Sonrisa",
    description:
      "Transformación completa de tu sonrisa utilizando tecnología 3D y materiales premium para resultados naturales y duraderos.",
    image: "/optimized-images/img-lumia-ultra/cliente-final-4-optimized.webp",
    href: "/servicios/diseno-de-sonrisa",
    benefits: [
      "Resultados predecibles",
      "Tecnología 3D",
      "Materiales premium",
      "Proceso personalizado",
    ],
    duration: "2-3 citas",
    price: "Desde $2,500,000",
  },
  {
    title: "Implantes Dentales",
    description:
      "Reemplazo de dientes perdidos con implantes de titanio de alta calidad y coronas estéticas que lucen y funcionan como dientes naturales.",
    image: "/optimized-images/img-lumia-ultra/protesis-1.webp",
    href: "/servicios/implantes-dentales",
    benefits: [
      "Titanio grado médico",
      "Cirugía guiada",
      "Corona personalizada",
      "Garantía extendida",
    ],
    duration: "3-6 meses",
    price: "Desde $1,800,000",
  },
  {
    title: "Ortodoncia Invisible",
    description:
      "Corrección de la posición dental con alineadores transparentes Invisalign para una sonrisa perfecta sin brackets metálicos.",
    image: "/optimized-images/img-lumia-ultra/antes-despues-1-optimized.webp",
    href: "/servicios/ortodoncia",
    benefits: [
      "Alineadores invisibles",
      "Removibles",
      "Cómodos",
      "Resultados precisos",
    ],
    duration: "6-18 meses",
    price: "Desde $4,500,000",
  },
  {
    title: "Bichectomía",
    description:
      "Reducción de las bolsas de Bichat para afinar el rostro y resaltar los pómulos, creando un perfil facial más definido y armonioso.",
    image: "/optimized-images/img-lumia-ultra/cliente-final-1-optimized.webp",
    href: "/servicios/bichectomia",
    benefits: [
      "Rostro más definido",
      "Procedimiento ambulatorio",
      "Recuperación rápida",
      "Resultados permanentes",
    ],
    duration: "1 cita",
    price: "Desde $1,200,000",
  },
  {
    title: "Blanqueamiento Dental",
    description:
      "Tratamiento profesional para aclarar el color de tus dientes hasta 8 tonos, devolviendo la blancura natural de tu sonrisa.",
    image: "/optimized-images/img-lumia-ultra/cliente-final-2-optimized.webp",
    href: "/servicios/blanqueamiento",
    benefits: [
      "Hasta 8 tonos más blanco",
      "Sin sensibilidad",
      "Resultados inmediatos",
      "Duración prolongada",
    ],
    duration: "1 cita",
    price: "Desde $350,000",
  },
  {
    title: "Odontología Estética General",
    description:
      "Tratamientos integrales para mejorar la apariencia y función de tu sonrisa, incluyendo carillas, coronas y restauraciones estéticas.",
    image: "/optimized-images/img-lumia-ultra/cliente-final-3-optimized.webp",
    href: "/servicios/odontologia-estetica-general",
    benefits: [
      "Múltiples tratamientos",
      "Enfoque integral",
      "Materiales estéticos",
      "Atención personalizada",
    ],
    duration: "Variable",
    price: "Consultar",
  },
];

const process = [
  {
    step: "1",
    title: "Valoración Inicial",
    description:
      "Examen completo, radiografías y diseño del plan de tratamiento personalizado.",
  },
  {
    step: "2",
    title: "Diagnóstico 3D",
    description:
      "Análisis digital de sonrisa y simulación de resultados con tecnología avanzada.",
  },
  {
    step: "3",
    title: "Plan de Tratamiento",
    description:
      "Presentación detallada del plan, cronograma y costos del tratamiento.",
  },
  {
    step: "4",
    title: "Ejecución",
    description:
      "Realización del tratamiento con los más altos estándares de calidad.",
  },
  {
    step: "5",
    title: "Seguimiento",
    description:
      "Control post-tratamiento y mantenimiento para garantizar resultados duraderos.",
  },
];
---

<Layout
  title="Servicios - LUMIA Odontología Especializada"
  description="Descubre nuestros servicios de odontología estética y restaurativa. Diseño de sonrisa, implantes dentales, ortodoncia invisible, bichectomía y más en Manizales y Pereira."
  lang={lang}
  keywords="servicios dentales Manizales, diseño de sonrisa Pereira, implantes dentales Colombia, ortodoncia invisible, bichectomía facial"
>
  <Header />

  <main>
    <!-- Hero Section -->
    <section
      class="relative h-screen flex items-center justify-center overflow-hidden"
    >
      <div class="absolute inset-0">
        <img
          src="/galeria.webp"
          alt="LUMIA Services - Dr. Alejandro Restrepo Rehabilitador Oral"
          class="w-full h-full object-cover object-center grayscale brightness-75"
          loading="eager"
          width="1920"
          height="1080"
          decoding="async"
          fetchpriority="high"
        />
        <div class="absolute inset-0 bg-black/40"></div>
      </div>

      <div class="absolute inset-0 flex items-end justify-start">
        <div
          class="text-left text-white max-w-2xl px-4 sm:px-6 lg:px-8 pb-8 sm:pb-12 sm:ml-8 md:ml-12 lg:ml-16"
        >
          <h1 class="text-4xl md:text-6xl font-light mb-6 tracking-wide">
            {lang === "es" ? "Lo que Hacemos" : "What We Do"}
          </h1>
          <p
            class="text-lg md:text-xl opacity-90 font-light tracking-wide leading-relaxed"
          >
            {
              lang === "es"
                ? "Transformamos sonrisas con tecnología de vanguardia y atención personalizada. Cada tratamiento es único, cada resultado extraordinario."
                : "We transform smiles with cutting-edge technology and personalized care. Every treatment is unique, every result extraordinary."
            }
          </p>
        </div>
      </div>
    </section>

    <!-- Main Services Section -->
    <section class="pt-32 bg-white">
      <div class="px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-20">
          <div
            class="text-sm font-medium text-amber-600 tracking-widest uppercase mb-4"
          >
            {lang === "es" ? "Servicios Principales" : "Main Services"}
          </div>
          <h2 class="text-4xl md:text-5xl font-light text-gray-900 mb-8">
            {
              lang === "es"
                ? "Especialidades de Excelencia"
                : "Excellence Specialties"
            }
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            {
              lang === "es"
                ? "Tratamientos especializados diseñados para transformar tu sonrisa y mejorar tu calidad de vida"
                : "Specialized treatments designed to transform your smile and improve your quality of life"
            }
          </p>
        </div>

        <div
          class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-0 -mx-4 sm:-mx-6 lg:-mx-8"
        >
          {
            mainServices.map((service, index) => (
              <div class="relative group">
                <div class="h-64 md:h-80 lg:h-96 bg-gray-200 overflow-hidden">
                  <img
                    src={service.image}
                    alt={service.title}
                    class="w-full h-full object-cover grayscale brightness-50 group-hover:grayscale-0 group-hover:brightness-75 transition-all duration-300"
                    loading="lazy"
                    width="400"
                    height="300"
                    decoding="async"
                    fetchpriority="low"
                  />
                </div>
                <div class="absolute inset-0 flex items-end justify-start">
                  <div class="text-left text-white max-w-xs px-4 pb-6">
                    <h3 class="text-xl md:text-2xl font-light mb-3 group-hover:text-amber-400 transition-colors">
                      {service.title}
                    </h3>
                    <p class="text-sm md:text-base leading-relaxed opacity-90">
                      {service.description}
                    </p>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Process Section -->
    <section class="py-32 bg-black text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-20">
          <div
            class="text-sm font-medium text-amber-400 tracking-widest uppercase mb-4"
          >
            {lang === "es" ? "Nuestro Proceso" : "Our Process"}
          </div>
          <h2 class="text-4xl md:text-5xl font-light mb-8">
            {lang === "es" ? "Metodología LUMIA" : "LUMIA Methodology"}
          </h2>
          <p class="text-xl text-gray-300 max-w-3xl mx-auto">
            {
              lang === "es"
                ? "Un enfoque sistemático y personalizado para garantizar los mejores resultados"
                : "A systematic and personalized approach to ensure the best results"
            }
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-12">
          {
            process.map((step, index) => (
              <div class="text-center group">
                <div class="w-16 h-16 bg-amber-600 rounded-full flex items-center justify-center mx-auto mb-8 group-hover:scale-110 transition-transform duration-300">
                  <span class="text-white text-xl font-light">{step.step}</span>
                </div>
                <h3 class="text-xl font-light mb-4 group-hover:text-amber-400 transition-colors">
                  {step.title}
                </h3>
                <p class="text-gray-300 text-sm leading-relaxed">
                  {step.description}
                </p>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-32 bg-white text-gray-900">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-4xl md:text-5xl font-light mb-8">
          {
            lang === "es"
              ? "¿Listo para Transformar tu Sonrisa?"
              : "Ready to Transform Your Smile?"
          }
        </h2>
        <p class="text-xl mb-12 text-gray-600">
          {
            lang === "es"
              ? "Agenda tu valoración personalizada y descubre cuál es el tratamiento ideal para ti"
              : "Schedule your personalized consultation and discover which treatment is ideal for you"
          }
        </p>
        <div class="flex flex-col sm:flex-row gap-6 justify-center">
          <a
            href={lang === "es" ? "/contacto" : "/en/contact"}
            class="inline-flex items-center px-10 py-5 bg-amber-600 text-white font-medium rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105"
          >
            {lang === "es" ? "Agendar Valoración" : "Schedule Consultation"}
          </a>
          <a
            href="https://wa.me/573164052829"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-10 py-5 border-2 border-amber-600 text-amber-600 hover:bg-amber-600 hover:text-white font-medium rounded-lg transition-all duration-300"
          >
            <svg class="mr-3 w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893A11.821 11.821 0 0020.531 3.503"
              ></path>
            </svg>
            {lang === "es" ? "Consulta WhatsApp" : "WhatsApp Consultation"}
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
