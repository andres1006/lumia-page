---
import "@fontsource/montserrat/400.css";
import "@fontsource/montserrat/500.css";
import "@fontsource/montserrat/600.css";
import "@fontsource/montserrat/700.css";
import "@fontsource/playfair-display/400.css";
import "@fontsource/playfair-display/700.css";
import "../styles/global.css";

export interface Props {
  title: string;
  description: string;
  lang?: string;
  canonicalURL?: string;
  ogImage?: string;
  keywords?: string;
}

const {
  title,
  description,
  lang = "es",
  canonicalURL = Astro.url.href,
  ogImage = "/images/og-image.jpg",
  keywords = "odontología, diseño de sonrisa, implantes dentales, turismo dental, Manizales, Pereira",
} = Astro.props;

const siteName = "LUMIA Odontología Especializada";
const fullTitle = title === siteName ? title : `${title} | ${siteName}`;
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="LUMIA Odontología Especializada" />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:locale" content={lang === "es" ? "es_CO" : "en_US"} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={fullTitle} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImage} />

    <!-- Hreflang for multilingual -->
    <link
      rel="alternate"
      hreflang="es"
      href={`https://lumiaodontologia.com${Astro.url.pathname}`}
    />
    <link
      rel="alternate"
      hreflang="en"
      href={`https://lumiaodontologia.com/en${Astro.url.pathname}`}
    />
    <link
      rel="alternate"
      hreflang="x-default"
      href={`https://lumiaodontologia.com${Astro.url.pathname}`}
    />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "DentalClinic",
        "name": "LUMIA Odontología Especializada",
        "description": "Clínica dental especializada en diseño de sonrisa, implantes dentales y turismo dental en Manizales y Pereira, Colombia",
        "url": "https://lumiaodontologia.com",
        "logo": "https://lumiaodontologia.com/images/logo.png",
        "address": [
          {
            "@type": "PostalAddress",
            "streetAddress": "CC Fundadores",
            "addressLocality": "Manizales",
            "addressRegion": "Caldas",
            "addressCountry": "CO"
          },
          {
            "@type": "PostalAddress",
            "streetAddress": "Oval Médica",
            "addressLocality": "Pereira",
            "addressRegion": "Risaralda",
            "addressCountry": "CO"
          }
        ],
        "telephone": ["+57-300-000-0000", "+57-300-000-0001"],
        "priceRange": "$$$",
        "medicalSpecialty": [
          "Cosmetic Dentistry",
          "Dental Implants",
          "Orthodontics"
        ],
        "sameAs": [
          "https://www.instagram.com/lumiaodontologia",
          "https://www.facebook.com/lumiaodontologia"
        ]
      }
    </script>

    <title>{fullTitle}</title>
  </head>
  <body class="font-sans antialiased bg-white text-gray-900">
    <slot />

    <!-- WhatsApp Widget -->
    <div class="fixed bottom-6 right-6 z-50">
      <a
        href="https://wa.me/573000000000"
        target="_blank"
        rel="noopener noreferrer"
        class="bg-green-500 hover:bg-green-600 text-white p-4 rounded-full shadow-luxury transition-all duration-300 hover:scale-110 flex items-center justify-center group"
        aria-label="Contactar por WhatsApp"
      >
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
          <path
            d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893A11.821 11.821 0 0020.531 3.503"
          ></path>
        </svg>
        <span
          class="ml-2 hidden group-hover:block whitespace-nowrap bg-gray-900 text-white px-2 py-1 rounded text-sm absolute right-full mr-2"
        >
          {lang === "es" ? "Escríbenos" : "Message us"}
        </span>
      </a>
    </div>
  </body>
</html>

<style is:global>
  html {
    font-family: "Montserrat", system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  .font-serif {
    font-family: "Playfair Display", serif;
  }

  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: #f1f1f1;
  }

  ::-webkit-scrollbar-thumb {
    background: #d4af37;
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #b8941f;
  }

  /* Smooth transitions */
  * {
    transition:
      color 0.2s ease,
      background-color 0.2s ease,
      border-color 0.2s ease,
      transform 0.2s ease,
      opacity 0.2s ease;
  }

  /* Focus states for accessibility */
  .focus\:ring-gold:focus {
    --tw-ring-color: rgba(212, 175, 55, 0.5);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px); /* Increased from 20px for a bit more noticeability */
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fadeInUp {
    opacity: 0; /* Start hidden before animation */
    animation: fadeInUp 0.6s ease-out forwards; /* Increased duration slightly */
  }

  .animation-delay-200ms { animation-delay: 0.2s; }
  .animation-delay-400ms { animation-delay: 0.4s; }
  .animation-delay-600ms { animation-delay: 0.6s; }
  .animation-delay-800ms { animation-delay: 0.8s; }
</style>
