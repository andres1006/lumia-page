---
export interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  loading?: 'lazy' | 'eager';
  sizes?: string;
}

const { src, alt, width, height, class: className, loading = 'lazy', sizes } = Astro.props;

// Generar rutas optimizadas
const baseName = src.replace(/\.[^/.]+$/, '');
const optimizedSrc = baseName.replace('/img-lumia/', '/optimized-images/img-lumia/') + '-optimized' + src.match(/\.[^/.]+$/)?.[0];
const webpSrc = baseName.replace('/img-lumia/', '/optimized-images/img-lumia/') + '.webp';
---

<picture>
  <!-- WebP (mejor compresiÃ³n) -->
  <source
    type="image/webp"
    srcset={webpSrc}
    sizes={sizes || '100vw'}
  />
  
  <!-- JPEG/PNG optimizado -->
  <img
    src={optimizedSrc}
    alt={alt}
    width={width}
    height={height}
    class={className}
    loading={loading}
    decoding="async"
  />
</picture>

<style>
  img {
    max-width: 100%;
    height: auto;
  }
</style>
