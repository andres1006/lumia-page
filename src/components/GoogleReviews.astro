---
// Google Reviews Component
// Este componente integra las reseñas de Google usando Elfsight
// Para configurar, necesitarás:
// 1. Crear una cuenta en Elfsight (https://elfsight.com)
// 2. Configurar el widget de Google Reviews
// 3. Obtener el script de Elfsight
// 4. Reemplazar el script de ejemplo con el real

interface Props {
  title?: string;
  subtitle?: string;
  showTitle?: boolean;
  hidden?: boolean;
}

const {
  title = "Reseñas de Google",
  subtitle = "Lo que dicen nuestros pacientes",
  showTitle = true,
  hidden = false,
} = Astro.props;

// Si está oculto, no renderizar nada
if (hidden) {
  return null;
}
---

<section class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    {
      showTitle && (
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-light text-gray-900 mb-6">
            {title}
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">{subtitle}</p>
        </div>
      )
    }

    <!-- Google Reviews Widget -->
    <div class="google-reviews-container">
      <!-- 
        INSTRUCCIONES PARA CONFIGURAR:
        
        1. Ve a https://elfsight.com/es/google-reviews-widget/html/
        2. Crea una cuenta gratuita
        3. Configura tu widget de Google Reviews
        4. Copia el script generado y reemplaza el script de abajo
        5. Personaliza los colores y estilo según tu marca
      -->

      <!-- Script de ejemplo - REEMPLAZAR CON EL SCRIPT REAL DE ELFSIGHT -->
      <div id="elfsight-app-google-reviews" class="elfsight-app-google-reviews">
        <!-- Widget placeholder - se reemplazará con el script real -->
        <div class="text-center py-12 bg-white rounded-2xl shadow-lg">
          <div
            class="w-16 h-16 bg-primary-gold/20 rounded-full mx-auto mb-4 flex items-center justify-center"
          >
            <svg
              class="w-8 h-8 text-primary-gold"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">
            Reseñas de Google
          </h3>
          <p class="text-gray-600 mb-4">
            Configura el widget de Elfsight para mostrar las reseñas reales
          </p>
          <a
            href="https://elfsight.com/es/google-reviews-widget/html/"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-6 py-3 bg-primary-gold text-white font-medium rounded-lg hover:bg-primary-gold-dark transition-colors"
          >
            Configurar Widget
            <svg
              class="ml-2 w-4 h-4"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
              ></path>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- CTA para dejar reseña -->
    <div class="text-center mt-12">
      <p class="text-gray-600 mb-6">¿Te gustó tu experiencia con nosotros?</p>
      <a
        href="https://www.google.com/search?q=Lumia+odontolog%C3%ADa+Opiniones"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center px-8 py-4 bg-white border-2 border-primary-gold text-primary-gold font-medium rounded-lg hover:bg-primary-gold hover:text-white transition-all duration-300 transform hover:scale-105 shadow-lg"
      >
        <svg class="mr-3 w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path
            d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
            fill="#4285F4"></path>
          <path
            d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
            fill="#34A853"></path>
          <path
            d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
            fill="#FBBC05"></path>
          <path
            d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
            fill="#EA4335"></path>
        </svg>
        Dejar Reseña en Google
      </a>
    </div>
  </div>
</section>

<!-- 
  SCRIPT DE ELFSIGHT - REEMPLAZAR CON EL SCRIPT REAL
  Una vez que configures el widget en Elfsight, reemplaza este script con el real
-->
<script src="https://apps.elfsight.com/p/platform.js" defer></script>

<style>
  .google-reviews-container {
    min-height: 400px;
  }

  .elfsight-app-google-reviews {
    width: 100%;
  }

  /* Estilos para el widget de Elfsight */
  .elfsight-app-google-reviews .elfsight-app {
    border-radius: 16px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .google-reviews-container {
      min-height: 300px;
    }
  }
</style>
