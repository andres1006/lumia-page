---
// Google Reviews Component
// Este componente integra las reseñas de Google usando Elfsight
// Para configurar, necesitarás:
// 1. Crear una cuenta en Elfsight (https://elfsight.com)
// 2. Configurar el widget de Google Reviews
// 3. Obtener el script de Elfsight
// 4. Reemplazar el script de ejemplo con el real

interface Props {
  title?: string;
  subtitle?: string;
  showTitle?: boolean;
  hidden?: boolean;
}

const {
  title = "Reseñas de Google",
  subtitle = "Lo que dicen nuestros pacientes",
  showTitle = true,
  hidden = false,
} = Astro.props;

// Si está oculto, no renderizar nada
if (hidden) {
  return null;
}
---

<section class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    {
      showTitle && (
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-light text-gray-900 mb-6">
            {title}
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">{subtitle}</p>
        </div>
      )
    }

    <!-- Google Reviews Widget -->
    <div class="google-reviews-container">
      <!-- 
        INSTRUCCIONES PARA CONFIGURAR:
        
        1. Ve a https://elfsight.com/es/google-reviews-widget/html/
        2. Crea una cuenta gratuita
        3. Configura tu widget de Google Reviews
        4. Copia el script generado y reemplaza el script de abajo
        5. Personaliza los colores y estilo según tu marca
      -->

      <!-- Imagen de Google Reviews -->
      <div class="text-center">
        <div
          class="bg-white rounded-2xl shadow-lg overflow-hidden max-w-4xl mx-auto"
        >
          <img
            src="/google-reseña.png"
            alt="Reseñas de Google - LUMIA Odontología"
            class="w-full h-auto object-contain"
            loading="lazy"
          />
        </div>
      </div>
    </div>

    <!-- CTA para dejar reseña -->
    <div class="text-center mt-12">
      <p class="text-gray-600 mb-6">¿Te gustó tu experiencia con nosotros?</p>
      <a
        href="https://www.google.com/search?sca_esv=c6620bc555597255&sxsrf=AE3TifMiByefTZkaP1EA6oEdDaAwG6SqVA:1758129419342&si=AMgyJEtREmoPL4P1I5IDCfuA8gybfVI2d5Uj7QMwYCZHKDZ-E3fi2fxiJwxojFTcvDDWslIXR3tDQBHqFy763ncFJv73wwOnFpteWUStSRO47SOEgoaNW2vk3YD9ByF3pLgcyrpftMppdK3iTtnAa2y2K20xqO_Y0g%3D%3D&q=Lumia+odontolog%C3%ADa+Opiniones&sa=X&ved=2ahUKEwjcjIm8puCPAxWGRDABHTJ1K9oQ0bkNegQINhAE&biw=1667&bih=991&dpr=2"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center px-8 py-4 bg-white border-2 border-primary-gold text-primary-gold font-medium rounded-lg hover:bg-primary-gold hover:text-white transition-all duration-300 transform hover:scale-105 shadow-lg"
      >
        <svg class="mr-3 w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path
            d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
            fill="#4285F4"></path>
          <path
            d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
            fill="#34A853"></path>
          <path
            d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
            fill="#FBBC05"></path>
          <path
            d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
            fill="#EA4335"></path>
        </svg>
        Dejanos un comentario
      </a>
    </div>
  </div>
</section>

<!-- 
  SCRIPT DE ELFSIGHT - REEMPLAZAR CON EL SCRIPT REAL
  Una vez que configures el widget en Elfsight, reemplaza este script con el real
-->
<script src="https://apps.elfsight.com/p/platform.js" defer></script>

<style>
  .google-reviews-container {
    min-height: 400px;
  }

  .elfsight-app-google-reviews {
    width: 100%;
  }

  /* Estilos para el widget de Elfsight */
  .elfsight-app-google-reviews .elfsight-app {
    border-radius: 16px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .google-reviews-container {
      min-height: 300px;
    }
  }
</style>
