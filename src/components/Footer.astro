---
import { getLangFromUrl, useTranslations } from "../i18n";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer class="bg-black text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      <!-- Logo and Description -->
      <div>
        <div class="flex items-center space-x-3 mb-6">
          <img
            src="/optimized-images/img-lumia/logo-lumia-optimized.png"
            alt="LUMIA"
            class="w-12 h-12"
          />
          <div>
            <span class="text-2xl font-light text-white">LUMIA</span>
            <div class="text-sm text-gray-400 -mt-1">
              {
                lang === "es"
                  ? "Odontología Especializada"
                  : "Specialized Dentistry"
              }
            </div>
          </div>
        </div>
        <p class="text-gray-300 mb-6 max-w-sm">
          {
            lang === "es"
              ? "Transformamos sonrisas con tecnología de vanguardia y atención personalizada de clase mundial."
              : "We transform smiles with cutting-edge technology and world-class personalized care."
          }
        </p>
        <div class="flex space-x-4">
          <a
            href="#"
            class="text-gray-400 hover:text-white transition-colors"
            aria-label="Instagram"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987c6.62 0 11.987-5.367 11.987-11.987C24.014 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.49-3.326-1.297s-1.297-1.888-1.297-3.115c0-1.227.42-2.308 1.297-3.115s2.029-1.297 3.326-1.297c1.297 0 2.448.49 3.326 1.297s1.297 1.888 1.297 3.115c0 1.227-.42 2.308-1.297 3.115s-2.029 1.297-3.326 1.297zm7.718 0c-1.297 0-2.448-.49-3.326-1.297s-1.297-1.888-1.297-3.115c0-1.227.42-2.308 1.297-3.115s2.029-1.297 3.326-1.297c1.297 0 2.448.49 3.326 1.297s1.297 1.888 1.297 3.115c0 1.227-.42 2.308-1.297 3.115s-2.029 1.297-3.326 1.297z"
              ></path>
            </svg>
          </a>
          <a
            href="#"
            class="text-gray-400 hover:text-white transition-colors"
            aria-label="Facebook"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
              ></path>
            </svg>
          </a>
          <a
            href="#"
            class="text-gray-400 hover:text-white transition-colors"
            aria-label="WhatsApp"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893A11.821 11.821 0 0020.531 3.503"
              ></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-medium text-white mb-6">
          {lang === "es" ? "Enlaces" : "Links"}
        </h3>
        <ul class="space-y-3">
          <li>
            <a
              href={lang === "es" ? "/" : "/en"}
              class="text-gray-300 hover:text-white transition-colors"
            >
              {t("nav.home")}
            </a>
          </li>
          <li>
            <a
              href={lang === "es" ? "/nosotros" : "/en/about"}
              class="text-gray-300 hover:text-white transition-colors"
            >
              {t("nav.about")}
            </a>
          </li>
          <li>
            <a
              href={lang === "es" ? "/servicios" : "/en/services"}
              class="text-gray-300 hover:text-white transition-colors"
            >
              {t("nav.services")}
            </a>
          </li>
          <li>
            <a
              href={lang === "es" ? "/galeria" : "/en/gallery"}
              class="text-gray-300 hover:text-white transition-colors"
            >
              {t("nav.gallery")}
            </a>
          </li>
          <li>
            <a
              href={lang === "es" ? "/contacto" : "/en/contact"}
              class="text-gray-300 hover:text-white transition-colors"
            >
              {t("nav.contact")}
            </a>
          </li>
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="text-lg font-medium text-white mb-6">
          {lang === "es" ? "Contacto" : "Contact"}
        </h3>
        <div class="space-y-4">
          <div>
            <p class="text-gray-400 text-sm mb-1">CC Fundadores</p>
            <a
              href="tel:+573000000000"
              class="text-white hover:text-gray-300 transition-colors text-sm block"
            >
              +57 (300) 000-0000
            </a>
          </div>

          <div>
            <p class="text-gray-400 text-sm mb-1">
              {t("contact.schedule")}
            </p>
            <p class="text-white text-sm">
              {
                lang === "es"
                  ? "Lun - Vie: 8:00 AM - 6:00 PM"
                  : "Mon - Fri: 8:00 AM - 6:00 PM"
              }
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Border -->
    <div class="border-t border-gray-800 mt-12 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-400 text-sm">
          © 2024 LUMIA Odontología Especializada. {
            lang === "es"
              ? "Todos los derechos reservados."
              : "All rights reserved."
          }
        </p>
        <div class="flex space-x-6 mt-4 md:mt-0">
          <a
            href="#"
            class="text-gray-400 hover:text-white transition-colors text-sm"
          >
            {lang === "es" ? "Privacidad" : "Privacy"}
          </a>
          <a
            href="#"
            class="text-gray-400 hover:text-white transition-colors text-sm"
          >
            {lang === "es" ? "Términos" : "Terms"}
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
